@using TiendaVirtualCore.Web.ViewModels.Ciudad;
@model CiudadListVm
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Ciudad" asp-action="Delete">
    <input type="hidden" asp-for="CiudadId" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Ciudad</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreCiudad"></label>
            <input asp-for="NombreCiudad" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="NombrePais"></label>
            <input asp-for="NombrePais" disabled class="form-control"/>

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">
            Borrar
        </button>
        <a asp-controller="Ciudad" asp-action="Index" style="width:150px" class="btn btn-success">
            Volver
        </a>
    </div>
</form>
